<main class='ms-3'>
  {{#with navigation}}
    <div class='card'>
      <div class='nav'>
        {{#each links}}
          <div class='nav-item'>
            {{#unless href}}
              <a
                href='{{href}}'
                class='nav-link disabled'> {{text}}
              </a>
            {{else}}
              <a href='{{href}}' class='nav-link'>
                {{text}}
              </a>
            {{/unless}}
          </div>
        {{/each}}
      </div>
    </div>
  {{/with}}
  {{! ========= }}
  <h3 class='mb-5 mt-5'> {{header}} </h3>
  <div class='row'>
    <div class='col-8'>
      {{#with contacts_data}}
        <h2> {{title}} </h2>
        {{#each buttons}}
          {{#if isPrimary}}
            <button class='btn btn-warning'>
              {{text}}
            </button>
          {{/if}}
          {{#if isOutline}}
            <button class='btn btn-outline-warning'>
              {{text}}
            </button>
          {{/if}}
        {{/each}}
        {{! (firstname surname) }}

        {{#with form}}
          {{#with input}}
            <div class='row'>
              {{#with surname}}
                <div class='col-6 g-2'>
                  <label class='form-label'>
                    {{label}}
                  </label>
                  <input
                    class='form-control'
                    placeholder='{{placeholder}}'
                  />
                  <div class='form-text text-warning'>
                    {{caption}}
                  </div>
                </div>
              {{/with}}
              {{#with name}}
                <div class='col-6 g-2'>
                  <label class='form-label'>
                    {{label}}
                  </label>
                  <input
                    class='form-control'
                    placeholder='{{placeholder}}' />
                  <div class='form-text text-warning'>
                    {{caption}}
                  </div>

                </div>
              {{/with}}
            </div>
            <div class='row'>
              {{#with phone}}
                <div class='col-6 g-2'>
                  <label class='form-label'>
                    {{label}}
                  </label>
                  <input
                    class='form-control'
                    placeholder='{{placeholder}}'
                  />
                  <div class='form-text text-warning'>
                    {{caption}}</div>

                </div>
              {{/with}}
              {{#with email}}
                <div class='col-6 g-2'>
                  <label class='form-label'>
                    {{label}}
                  </label>
                  <input
                    class='form-control'
                    placeholder='{{placeholder}}'
                  />
                  <div class='form-text text-warning'>
                    {{caption}}</div>

                </div>
              {{/with}}

            </div>
          {{/with}}
          <hr />
          {{#each switch}}
            <div class='row'>
              {{#if isActive}}
                <div 
                  class='form-check form-switch mb-2 mt-2'
                >
                  <label for="{{text}}" class='form-check=label'>
                    {{text}}
                  </label>
                  <input 
                    id="{{text}}"
                    type='checkbox'
                    class='form-check-input'
                  />
                </div>
              {{else}}
                <div class='row'> </div>
                <div class='form-check form-switch'>
                  <label for="{{text}}" class='form-check=label'>
                    {{text}}
                  </label>
                  <input
                    id="{{text}}"
                    type='checkbox'
                    class='form-check-input'
                  />
                </div>

              {{/if}}

            </div>
          {{/each}}
        {{/with}}
        <hr />

      {{/with}}
      {{#with delivery}}
        <div class='display-6 mb-4'>{{title}} </div>
        <div class='card'>
          <div class='row'>
            {{#each select}}
              <div class='col-6'>
                <label class='form-label mt-2 ms-2'>
                  {{label}}
                </label>
                <select class='form-select mb-2'>
                   <option selected disabled placeholder=''> {{placeholder}} </option>
                  {{#each options}}
                    <option value="{{value}}"> {{text}} </option>
                  {{/each}}
                </select>
              </div>
            {{/each}}
          </div>
        </div>
        {{#with payment}}
          <div class='display-6 mt-3 mb-2'> {{title}} </div>

          {{#each list}}
            <div class='form-check'>
              <label for="{{type}}" class='form-check-label'>
                {{type}}
              </label>
              <input
                id="{{type}}"
                class='form-check-input'
                type='radio'
                name='payment'
              />
              <div class='form-text'>
                {{description}}
              </div>
            </div>
          {{/each}}
        {{/with}}
        <hr />
        {{#with contact}}
          <h4 class='mt-3'> {{title}} </h4>
          <div class='row'>
            {{#with surname}}
              <div class='col-6 g-2'>
                <label class='form-label'>
                  {{label}}
                </label>
                <input
                  class='form-control'
                  placeholder='{{placeholder}}'
                />
                <div class='form-text'>
                  {{caption}}
                </div>
              </div>
            {{/with}}
            {{#with name}}
              <div class='col-6 g-2'>
                <label class='form-label'>
                  {{label}}
                </label>
                <input
                  class='form-control'
                  placeholder='{{placeholder}}'
                />
                <div class='form-text'>
                  {{caption}}
                </div>
              </div>
            {{/with}}
            {{#with phone}}
              <div class='col-6 g-2 mt-3'>
                <label class='form-label'>
                  {{label}}
                </label>
                <input
                  class='form-control'
                  placeholder='{{placeholder}}'
                />
                <div class='form-text'>
                  {{caption}}
                </div>
              </div>
            {{/with}}
            {{#with email}}
              <div class='col-6 g-2 mt-3'>
                <label class='form-label'>
                  {{label}}
                </label>
                <input
                  class='form-control'
                  placeholder='{{placeholder}}'
                />
                <div class='form-text'>
                  {{caption}}
                </div>
              </div>
            {{/with}}

          </div>
        {{/with}}
        <hr class='mb-4 mt-4' />
        <label class='form-label'>
          {{coment.label}}
        </label>
        <input
          class='form-control'
          placeholder='{{coment.placeholder}}'
        />
        {{! ================== }}
      {{/with}}
      <hr class='mt-5 mb-5' />

      {{#with coupon}}
        <div class='display-6'> {{title}} </div>

        {{#with select}}
          {{#with availabel_coupon}}
            <label class='form-label mt-2 ms-2'>{{label}}
            </label>
            <select class='form-select mb-2 form-control-lg'>
              <option selected disabled placeholder=''> {{placeholder}} </option>
              {{#each options}}
                <option
                  value='{{value}}'
                >
                  {{text}}
                </option>
              {{/each}}
            </select>
          {{/with}}

          {{#with friend_coupon}}
            <label class='form-label mt-2 ms-2'>{{label}}
            </label>
            <select class='form-select mb-2'>
              <option selected disabled placeholder=''> {{placeholder}} </option>
              {{#each options}}
                <option
                  value='{{value}}'
                >
                  {{text}}
                </option>
              {{/each}}
            </select>
          {{/with}}
        {{/with}}

        {{#with add}}
          {{#with friend}}
            <label class='form-label mt-3'>
              {{label}}
            </label>
            <input
              class='form-control form-control-lg'
              placeholder='{{placeholder}}'
            />
            <div class='form-text'>
              {{caption}}
            </div>
          {{/with}}
          {{#with colleague}}
            <label class='form-label mt-3'>
              {{label}}
            </label>
            <input
              class='form-control'
              placeholder='{{placeholder}}'
            />
            <div class='form-text'>
              {{caption}}
            </div>
          {{/with}}
        {{/with}}
      {{/with}}

      <hr class='mb-5 mt-5' />

      {{#with quiz}}
        <h4> {{title}} </h4>
        {{#with preference}}
          <div class='form-label'> {{title}} </div>
            {{#each options}}
            <div class='form-check'>
              <label for="{{this}}" class='form-check=label'>
                {{this}}
              </label>
              <input id="{{this}}" name="options" type='radio' class='form-check-input' />
            </div>
            {{/each}}
        {{/with}}
        <label
          class='form-label mt-3'> {{your_expirience.label}} </label>
        <input class='form-control'> </input>
        {{#with purchase_frequency}}
          <label class='form-label mt-2 ms-2'>{{label}}
            </label>
            <select class='form-select mb-2'>
            <option selected disabled placeholder=''> {{placeholder}} </option>  
              {{#each options}}
                <option
                  value='{{value}}'>
                  {{text}}
                </option>
              {{/each}}
            </select>
        {{/with}}
        {{#with factors}}
          <div class="form-check-label"> {{title}} </div>
          {{#each options}}
              <div class='form-check'>
              <label for="{{this}}" class="form-check-label"> {{this}} </label>
              <input id="{{this}}" class="form-check-input" type="checkbox">
               </div>
          {{/each}}
        {{/with}}
      {{/with}}
    </div>

    <div class='col-4'>
      <div class='card'>
        <div class='card-body nav flex-column'>
          {{#each action_block}}
            {{#if isSuccess}}
              <button class='btn btn-success col-8'>
                {{text}}
              </button>
            {{/if}}
            {{#if isDanger}}
              <button
                class='btn btn-danger mb-2 mt-2 col-6'
              >
                {{text}}
              </button>
            {{/if}}
            {{#if isInfo}}
              <button class='btn btn-info col-6'>
                {{text}}
              </button>
            {{/if}}
          {{/each}}
        </div>
      </div>
      <div class='card mt-3'>
        {{#with total}}
          <div class='card-header'>
            <h4>{{title}}</h4>
            {{#each item_list}}
              <div>{{name}}: {{price}}</div>
            {{/each}}
          </div>
          <div class='card-body'>
            {{#each additional_info}}
              <div>{{text}}: {{value}}</div>
            {{/each}}
            <hr />
            <div>
              {{total_price.text}}:
              {{total_price.value}}
            </div>
          </div>
          <div class='card-footer'>
            {{#each button}}
              {{#if isPrimary}}
                <button class='btn btn-primary'>
                  {{text}}
                </button>
              {{/if}}
              {{#if isOutline}}
                <button
                  class='btn btn-outline-primary mt-2'
                >
                  {{text}}
                </button>
              {{/if}}
            {{/each}}
          </div>
        {{/with}}

      </div>
    </div>

  </div>
</main>
<hr class="mt-4">
<div class="row">
<div class="col-12 nav">
{{#each footer}}
    <ul>
        {{#each this}}
            <div class="nav-item ">
                {{#unless @last}}
                    <a href="{{link}}" class="nav-link">{{text}}</a>
                    {{else}}
                        <a href="{{link}}" class="nav-link disabled">{{text}}</a>
                {{/unless}}   
            </div>
        {{/each}}
    </ul>
{{/each}}
</div> 
</div>