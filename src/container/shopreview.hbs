<main class='ms-3'>
  {{#with navigation}}
    <div class='card mb-5'>
      <div class='nav'>
        {{#each links}}
          <div class='nav-item'>
            {{#unless href}}
              <a href='{{href}}' class='nav-link disabled'>
                {{text}}
              </a>
            {{else}}
              <a href='{{href}}' class='nav-link'>
                {{text}}
              </a>
            {{/unless}}
          </div>
        {{/each}}
      </div>
    </div>
  {{/with}}
  {{! =====відгуки====== }}
  {{#with formBlock}}
    <div class='row'>
      <div class='col-8'>

        <h1 class='mt-5'> {{header}} </h1>
        <div class='text-muted mb-2'>
          {{rating.title}}:
          {{rating.value}}
        </div>
        {{#with actionBlock}}
          <div class='nav nav-tabs'>
            {{#each tabs}}
              <div class='col-4'>
                <div class='nav-item'>
                  {{#unless isActive}}
                    <a
                      href='#'
                      class='nav-link'
                    > {{text}}</a>
                  {{else}}
                    <a href='#' class='nav-link active'>
                      {{text}}</a>
                  {{/unless}}
                </div>
              </div>
            {{/each}}
          </div>
          <hr class='mt-5 mb-5' />
          <div class="card">
            <div class="m-3"> {{report.title}}</div>
            <p> <a class="btn btn-secondary ms-3" href="{{report.button.link}}">{{report.button.text}}</a> </p>
          </div>
          <hr class='mt-5 mb-5' />
        {{/with}}
        {{#with feedbackBlock}}
            <h1> {{title}} </h1>
            <div>
            {{#each buttons}}
              {{#if isWarning}}
                <a class="btn btn-warning" href="{{link}}"> {{text}} </a>
              {{/if}}
              {{#if isSuccess}}
                <a class="btn btn-success ms-3 me-3" href="{{link}}"> {{text}} </a>
              {{/if}}
              {{#if isDanger}}
                <a class="btn btn-danger" href="{{link}}"> {{text}} </a>
              {{/if}}
            {{/each}}
          </div>
          {{/with}}
          
        


      </div>
      {{! ======col-4====== }}
      <div class='col-4'>
        {{#with goodsInfo}}
          <div class='card'>
            <div class='col-6'>
              <img
                class='card-img-top m-2'
                src='{{photo}}'
              />
            </div>
            <div class='m-3'> {{name}}: {{price}} </div>
          </div>
          <div class="card mt-3 p-2">
            <strong> {{price}} </strong>
            {{#if inMarket}}
              <p> Є в наявності </p>
            {{/if}}
            {{#each buttons}}
            <p>
              {{#if isPrimary}}
              <a class="btn btn-primary" href="{{link}}"> {{text}} </a>
              {{/if}}
              {{#if isSecondary}}
              <a class="btn btn-secondary" href="{{link}}"> {{text}} </a>
              {{/if}}
            </p>
            {{/each}}

          </div>
          <div class="card mt-3 p-3"> 
            <div>{{seller.title}}: <b>{{seller.value}}</b></div>
          </div>
        {{/with}}
      </div>
    </div>
  {{/with}}
  <hr class="mt-5 mb-5">
  
    {{#each reviewList}}
    <div class="card p-3 mb-3">
      <div class="card mb-2">
        <div class="card-header">
          <h5>{{title.userName}}</h5>
          <p>{{title.caption}} </p>
          <p>{{title.date}} </p>
        </div> 
        
          {{#with reviewBody }}
          <div class="card-body">
            <p>{{seller.title}}: {{seller.value}} </p>
            <p>{{rating.title}}: {{rating.value}} </p>
            <p>{{text}}</p>
            <p><b>{{advantages.title}}:</b><br>{{advantages.text}}
            </p>
            <p class="mt-3"> <b>{{disadvantages.title}}: </b><br>{{disadvantages.text}} 
             </p>
             <div class="row">
              {{#each images}}
                <img class="col-2" src="{{this}}">
              {{/each}}
             </div>
            </div>
            </div>
              {{#each coments}}
              <div class="card ms-5 p-2 m-3">
                <h5>{{userName}} </h5>
                <p>{{date}}</p>
                <p>{{text}} </p>

              </div>
            {{/each}}
          {{/with}}
          

        

      </div>
    {{/each}}
   
    {{#with service }}
    <div class="text-bg-success text-center mt-5 mb-5">
    <h2 class="p-2"> {{title}} </h2>
    <p class="p-2"> {{description}} </p>
    {{#each buttons}}
      <p class="pb-2"><a href="{{link}}" class="btn btn-primary "> {{text}} </a>
    </p>{{/each}}
    </div>
    {{/with}}
    <hr class="mt-4">
    <div class='row'>
    <div class='col-12 nav'>
      {{#each footer}}
        <ul>
          {{#each this}}
            <div class='nav-item'>
              {{#unless @last}}
                <a
                  href='{{link}}'
                  class='nav-link'
                >{{text}}</a>
              {{else}}
                <a
                  href='{{link}}'
                  class='nav-link disabled'
                >{{text}}</a>
              {{/unless}}
            </div>
          {{/each}}
        </ul>
      {{/each}}
    </div>
  </div>
    
   
</main>